<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:columnCount="3"
    android:rowCount="5"
    android:background="#FFF">

    <!-- Ligne 1 -->
    <Button
        android:id="@+id/btnStop"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Stop"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnAvancer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Avancer"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnSuiviLigne"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Suivi"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <!-- Ligne 2 -->
    <Button
        android:id="@+id/btnGauche"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Gauche"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnRetour"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Reculer"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnDroite"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Droite"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <!-- Ligne 3 -->
    <Button
        android:id="@+id/btnOuvrir"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Ouvrir"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnFermer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Fermer"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnLuminosite"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="LuminositÃ©"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <!-- Ligne 4 -->
    <Button
        android:id="@+id/btnMonter"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Monter"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnDescendre"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Descendre"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnLireCouleur"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Couleur"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <!-- Ligne 5 -->
    <Button
        android:id="@+id/btnChangerDistance"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Seuil"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnComparer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Comparer"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/btnLangue"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:text="Langue"
        android:textSize="20sp"
        android:layout_margin="6dp"/>

    <!-- Zone message -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:textSize="18sp"
        android:padding="12dp"
        android:textColor="#333"
        android:background="#EEE"
        android:layout_marginTop="12dp" />

</GridLayout>
